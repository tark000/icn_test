<footer class="b-main-footer">
  <div class="b-main-inner">
    <div class="b-foot-logo">
      <%= link_to image_tag("foot-logo.png"), pages_path %>
      <div class="b-foot-phone">048 797 22 33</div>
    </div>
    <ul class="b-foot-nav">
      <li><%= link_to "#{t 'footer.tarifs'}", prices_path %></li>
      <li><%= link_to "#{t 'footer.about'}", abouts_path %></li>
      <li><%= link_to "#{t 'footer.forum'}", 'http://forum.icn.od.ua/', :target=>"_blank" %></li>
    </ul>
    <a href="<%= streets_path %>" title="" class="b-foot-map">
      <span class="ico"></span>
      <h4><%= t 'footer.map' %> </h4>
      <span class="link"><%= t 'footer.show-map' %></span>
    </a>
    <div class="b-foot-social">
      <h4><%= t 'footer.social' %></h4>
      <%= link_to image_tag("facebook.png"), "http://www.facebook.com/icn.ua?fref=ts", :class=>"social-link", :width=>"16", :height=>"16", :target=>"_blank" %>
      <%= link_to image_tag("twitter.png"), "https://twitter.com/ICN_ua", :class=>"social-link", :width=>"16", :height=>"16", :target=>"_blank" %>
      <%= link_to image_tag("vkontakte.gif", :width=>"16", :height=>"16"), "http://vk.com/icn_official", :class=>"social-link", :width=>"16", :height=>"16", :target=>"_blank" %>
      <%= link_to image_tag("ksymax.png", :width=>"16", :height=>"16"), "http://ksymax.com/icn", :class=>"social-link", :target=>"_blank" %>
    </div>
    <%= link_to image_tag("hb.png"), "http://hb.od.ua", :height=>"18", :target=>"_blank",  :class=>"b-create-studio"%>
  </div>
 </footer>

