<!DOCTYPE html>
<html>
<head>
  <title>IcnSite</title>
  <%= stylesheet_link_tag    "foundation.css", :media => "all" %>

  <%= stylesheet_link_tag "stylesheets/active_admin/editor/wysiwyg" %>
  <%= stylesheet_link_tag "stylesheets/app.css" %>

  <%= javascript_include_tag "javascripts/application" %>
  <%= javascript_include_tag "javascripts/jquery.dropkick" %>
  <%= javascript_include_tag  "javascripts/script" %>
  <%= javascript_include_tag "javascripts/jquery.jcarousel.min" %>
  <%= javascript_include_tag "javascripts/modernizr.foundation" %>
  <%= javascript_include_tag "javascripts/cufon-yui" %>
  <%= javascript_include_tag "javascripts/fonts.js" %>
  <%= javascript_include_tag "javascripts/fonts.js" %>
  <!--[if lt IE 9]><script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script><![endif]-->

  <%= csrf_meta_tags %>
</head>
<body>
<script type="text/javascript">
    $(document).ready(function() {
        $('.b-head-bot-nav-list').children('li').each(function(index, element) {
            var url = window.location;
            if($(element).find('a').attr('href') == url.pathname)
                $(element).addClass('active');
        });
    });
</script>

<div class="b-main-wrapper">
  <%= render 'layouts/header' %>
  <div class="b-main-container">
    <div class="b-main-inner">

        <%= yield %>

    </div>

  </div>
  <%= render 'layouts/footer' %>
</div>
<%= render 'layouts/popups' %>
<%= javascript_include_tag "javascripts/jquery.ui.all" %>
<%= javascript_include_tag "javascripts/jquery.cycle2.min" %>
<%= javascript_include_tag "javascripts/app" %>
</body>
</html>